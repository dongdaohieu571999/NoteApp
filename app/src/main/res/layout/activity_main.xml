<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:background="#00BCD4"
        android:elevation="0dp"
        sothree:umanoPanelHeight="50dp"
        sothree:umanoShadowHeight="0dp"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:background="#00BCD4"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_layout"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <TextClock
                        android:layout_width="wrap_content"
                        android:format12Hour="hh:mm:ss"
                        android:format24Hour="hh:mm:ss"
                        android:textSize="30dp"
                        android:layout_height="wrap_content"/>
                    <TextClock
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:format24Hour="EE"
                        android:format12Hour="EE"/>
                    <TextClock
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:format24Hour="dd/MM/yyyy"
                        android:format12Hour="dd/MM/yyyy"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/iconWeather"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:foregroundGravity="right"
                        android:src="@raw/normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hà Nội: 33°C\nĐộ ẩm: 30% "/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_layout"
                android:backgroundTint="#FFC107">
                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp"
                    android:text="Xin chào Hiếu, Hôm nay trời\nKhông có nắng. Hãy viết điều\ngì đó thật ý nghĩa nhé"
                    android:textColor="@color/whiteTextColor"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="15dp" />
                <ImageButton
                    android:layout_width="match_parent"
                    android:onClick="writeNote"
                    android:background="@drawable/round_layout"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <CalendarView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:id="@+id/calendar"
                android:background="@drawable/round_layout"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/round_bottom_left_right"
            sothree:elevation="0dp"
            android:clickable="true"
            android:focusable="false"
            android:id="@+id/dragView">

            <ListView
                android:id="@+id/list_view_child"
                android:padding="20dp"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="70dp"
        app:fabCustomSize="65dp"
        android:foregroundGravity="fill"
        android:onClick="loadAllNote"
        android:src="@drawable/ic_baseline_menu_24"
        app:maxImageSize="40dp"
        android:layout_height="70dp"
        app:layout_anchorGravity="center_horizontal"
        app:layout_anchor="@+id/dragView"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>